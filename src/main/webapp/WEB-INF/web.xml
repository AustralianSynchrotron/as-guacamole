<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.5"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                        http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <!-- Basic config -->
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>360</session-timeout>
    </session-config>

    <!-- Guacamole Tunnel Servlet -->
    <servlet>
        <description>Australian Synchrotron guacamole tunnel servlet</description>
        <servlet-name>ausyncguacTunnel</servlet-name>
        <servlet-class>
            net.sourceforge.guacamole.net.ausyncguac.AusyncGuacamoleTunnelServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ausyncguacTunnel</servlet-name>
        <url-pattern>/tunnel</url-pattern>
    </servlet-mapping>

    <!-- Credentials Servlet -->
    <servlet>
        <description>Australian Synchrotron credentials servlet</description>
        <servlet-name>credentialsServlet</servlet-name>
        <servlet-class>
            net.sourceforge.guacamole.net.ausyncguac.AusyncCredentialsServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>credentialsServlet</servlet-name>
        <url-pattern>/credentials</url-pattern>
    </servlet-mapping>

</web-app>
